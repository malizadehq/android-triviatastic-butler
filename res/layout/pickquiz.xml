<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/triviatasticbkgd"
    android:orientation="vertical"
    tools:context=".PickQuizActivity" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="14dp"
        android:paddingTop="2.75dp"
        android:text="@string/coinCount"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingTop="15dp"
        android:text="tap on a quiz below to get started!"
        android:textColor="#ff000000"
        android:textSize="19sp"
        android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="290dp"
            android:layout_height="450dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/quizbutton1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:text="Geography"
                android:textSize="30sp"
                android:textColor="#ffffffff"
                android:onClick="onClick"
                android:clickable="true" />

            <TextView
                android:id="@+id/quizbutton2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:text="Pop Culture"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="true" />

            <TextView
                android:id="@+id/quizbutton3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:text="Sports"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/quizbutton4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:text="Geography 2"
                android:textSize="30sp"
                android:clickable="false"
                android:onClick="onClick" />
            
            <RelativeLayout
                android:id="@+id/lockoverlay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:onClick="onLockedClick"
                android:clickable="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/quizbutton" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lock" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:src="@drawable/smallcoin" />

                <TextView
                    android:id="@+id/lockcost4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:text="20"
                    android:textSize="19sp"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="6dp" />
                
            </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/quizbutton5"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/quizbutton"
                    android:gravity="center"
                    android:text="Pop Culture 2"
                    android:textColor="#ffffffff"
                    android:textSize="30sp"
                    android:onClick="onClick"
                    android:clickable="false" />
                
                 <RelativeLayout
                android:id="@+id/lockoverlay5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:onClick="onLockedClick"
                android:clickable="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/quizbutton" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lock" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:src="@drawable/smallcoin" />

                <TextView
                    android:id="@+id/lockcost5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView2"
                    android:text="20"
                    android:textColor="#ffffffff"
                    android:textSize="19sp"
                    android:layout_marginTop="5dp" />
                
                </RelativeLayout>
                
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >
            
            <TextView
                android:id="@+id/quizbutton6"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:text="Sports 2"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="false" />
            
            <RelativeLayout
                android:id="@+id/lockoverlay6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:onClick="onLockedClick"
                android:clickable="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/quizbutton" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lock" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:src="@drawable/smallcoin" />

                <TextView
                    android:id="@+id/lockcost6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:text="20"
                    android:textColor="#ffffffff"
                    android:textSize="19sp"
                    android:layout_marginTop="5dp" />
                
                </RelativeLayout>
            
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >
            
              <TextView
                android:id="@+id/quizbutton7"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/quizbutton"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:text="Geography 3"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="false" />
              
              <RelativeLayout
                android:id="@+id/lockoverlay7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:onClick="onLockedClick"
                android:clickable="true" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/quizbutton" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/lock" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="5dp"
                    android:src="@drawable/smallcoin" />

                <TextView
                    android:id="@+id/lockcost7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:text="60"
                    android:textColor="#ffffffff"
                    android:textSize="19sp"
                    android:layout_marginTop="5dp" />
                
                </RelativeLayout>
            
            </RelativeLayout>
              
        </LinearLayout>
    </ScrollView>

</LinearLayout>