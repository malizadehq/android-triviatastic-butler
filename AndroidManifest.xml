<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sfsucsc780.triviatastic"
	android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="12" android:targetSdkVersion="17" />

	<application android:theme="@android:style/Theme.NoTitleBar"
		android:allowBackup="true"
		android:icon="@drawable/appicon">
		<activity android:name=".IntroActivity" android:label="@string/app_name" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".PickQuizActivity" android:screenOrientation="portrait"/>
		
		<activity
		    android:name=".QuizQuestionActivity"/>
		
		<activity
		    android:name=".CreateQuizActivity"
		    android:windowSoftInputMode="stateHidden"
		    android:screenOrientation="portrait"/>
	</application>
</manifest>